{
  "apiVersion":"v1",
  "kind":"Pod",
  "metadata":{
    "annotations":{
      "VirtletCPUModel":"host-model"
    },
    "name":"%s",
    "namespace":"kube-system",
    "tenant":"system"
  },
  "spec":{
    "virtualMachine":{
      "image":"%s",
      "imagePullPolicy":"IfNotPresent",
      "keyPairName":"foobar",
      "name":"%s",
      "publicKey":"ssh-rsa AAA",
      "resources":{
        "limits":{
          "cpu":"%d",
          "memory":"%dGi"
        },
        "requests":{
          "cpu":"%d",
          "memory":"%dGi"
        }
      }
    }
  }
}